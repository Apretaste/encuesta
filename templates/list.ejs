<div class="row">
	<div class="col s12">
		<ul class="tabs tabs-fixed-width">
			<li class="tab"><a href="#" class="active">Activas</a></li>
			<li class="tab"><a href="#" onclick="apretaste.send({command: 'ENCUESTA TERMINADAS'})">Terminadas</a></li> 
		</ul>
	</div>
</div>

<div class="row">
	<div class="col s12 m6 l4">
		<% surveys.forEach(function(item) { %>
			<div class="card blue-grey darken-1">
				<div class="card-content white-text">
					<span class="card-title"><%= item.title %></span>
					<p>Vence el <%= formatDateTime(item.deadline) %></p>
					<p><b>Ganarás §<%= item.value %> al completarla</b></p>
				</div>
				<div class="card-action">
					<a href="#" onclick="apretaste.send({command:'ENCUESTA VER',data:{'id':'<%= item.survey %>'}})">Completar</a>
				</div>
			</div>
		<% }) %>

		<p class="grey-text">Las encuestas son anónimas y encriptadas. Nadie leerá tu selección.</p>
	</div>
</div>