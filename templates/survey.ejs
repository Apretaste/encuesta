<!-- LIST OF QUESTIONS -->
<div id="list" class="row">
	<div class="col s12">
		<div class="row">
			<div class="col s12">
				<h1><%= survey.title %></h1>
				<% if(survey.details){ %>
					<p><%= survey.details %></p>
				<% } %>
			</div>
		</div>

		<div class="input-field">
			<input id="friend" type="email"/>
			<label for="friend">¿Quién le refirió?</label>
			<span class="helper-text" data-success="right">Escriba el email de quien le refirió y le daremos extra crédito, o deje este campo en blanco.</span>
		</div>

		<% for(var i=0; i<survey.questions.length; i++){
			var question = survey.questions[i]; %>
			<div class="row">
				<div class="col s12">
					<h2><small><%= i + 1 %>.</small> <%= question.title %></h2>
					<div id="<%= question.id %>" class="question">
						<table>
						<% for(var j=0; j<question.answers.length; j++){
							var answer = question.answers[j];
							var checked = answer.choosen ? 'checked' : '' %>
							<tr>
								<td align="center" width="7%" valign="middle">
									<label>
										<input class="with-gap" name="<%= question.id %>" value="<%= answer.id %>" <%= checked %> type="radio"/>
										<span><%= answer.title %></span>
									</label>
								</td>
							</tr>
						<% } %>
						</table>
					</div>
				</div>
			</div>
		<% } %>
	</div>
</div>

<!-- SAVE BUTTON -->
<div id="btn" class="fixed-action-btn">
	<a class="btn-floating btn-large waves-effect waves-light green" href="#!" onclick="submitSurvey()"><i class="material-icons">send</i></a>
</div>

<!-- COMPLETION MESSAGE -->
<div id="msg" class="row hidden">
	<div class="col s12 center">
		<h1>¡Chócala! Ya respondió esta encuesta</h1>
		<i class="material-icons large">pan_tool</i>
		<p>Usted ya respondió esta encuesta, y como agradecimiento le agregamos §<%= survey.value %> a su crédito.
			Muchas gracias por su participación.</p>
		<a class="btn waves-effect waves-light" href="#!" onclick="apretaste.send({command:'ENCUESTA'})">Otras
			encuestas</a>
	</div>
</div>